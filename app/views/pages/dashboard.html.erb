<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal">
	Add Task
</button>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<%= render 'tasks/form', task: @task %>
	</div>		
</div>

<div class= "container">
	<div class= "row">

		<div class= "col-md-3 border shadow">
			<h5>Backlog</h5>
			<div class="droppable" id="bucket1">
				<% @tasks.each do |task| %>
				<%= render 'tasks/show_card', task: task %>
				<% end %>
			</div>
		</div>

		<div class= "col-md-3 border shadow">
			<h5>Inprogress</h5>
			<div class="droppable" id="bucket2">

			</div>
		</div>

		<div class= "col-md-3 border shadow">
			<h5>Under Review</h5>
			<div class="droppable" id="bucket3">

			</div>
		</div>

		<div class= "col-md-3 border shadow">
			<h5>Complete</h5>
			<div class="droppable" id="bucket4">


			</div>
		</div>

	</div>
</div>
